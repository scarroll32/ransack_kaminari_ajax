<div class='container'>
  <h1>Components</h1>
  <div class='pull-right'>
    <%= link_to 'Add Component', new_component_path %>
    <br/>
  </div>


  <table class='table table-responsive table-hover table-striped components'>
    <%= search_form_for @search, url: components_path, html: { method: :get, class: 'ransack-form' } do |f| %>
    <thead>
      <tr>
        <th><%= sort_link(@search, :name, 'Name') %></th>
        <th><%= sort_link(@search, :description, 'Description') %></th>
        <th colspan="3"></th>
      </tr>
      <tr>
        <th><%= f.text_field :name_cont, class: 'form-control' %></th>
        <th><%= f.text_field :description_cont, class: 'form-control' %></th>
        <th>
          <%= f.submit 'Filter', class: 'btn btn-primary' %>
          <%= link_to 'Clear', components_path, class: 'btn btn-danger' %>
          <%= @components.total_count %> components
        </th>
      </tr>
    </thead>
    <% end %>

    <tbody>
      <%= render @components %>
    </tbody>
  </table>

  <br>

  <span id='more-anchor'></span>
  <%= render partial: 'load_more', locals: { collection: @components } %>

</div>
