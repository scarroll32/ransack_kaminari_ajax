<table class='table table-responsive table-hover table-striped'>
  <%= search_form_for @search, url: components_path, html: { method: :get, class: 'ransack-form' } do |f| %>
  <thead>
    <tr>
      <th><%= sort_link(@search, :name, 'Name') %></th>
      <th><%= sort_link(@search, :description, 'Description') %></th>
      <th colspan="3"></th>
    </tr>
    <tr>
      <th><%= f.text_field :name_cont, class: 'form-control' %></th>
      <th><%= f.text_field :description_cont, class: 'form-control' %></th>
      <th>
        <%= f.submit 'Filter', class: 'btn btn-primary', data: { disable_with: false } %>
        <%= link_to 'Clear', components_path, class: 'btn btn-danger' %>
        <%= @components.total_count %> components
      </th>
    </tr>
  </thead>
  <% end %>

  <tbody>
    <% @components.each do |component| %>
      <tr>
        <td><%= component.name %></td>
        <td><%= component.description %></td>
        <td><%= link_to 'Show', component %></td>
        <td><%= link_to 'Edit', edit_component_path(component) %></td>
        <td><%= link_to 'Destroy', component, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<br>
<div class="ransack-pagination">
  <%= paginate @components %>
</div>
